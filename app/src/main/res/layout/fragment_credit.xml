<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_saldo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:background="@drawable/rounded_corner_button_blue"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_big_button">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="end|top"
                        android:src="@drawable/icon_saldo"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_text_space"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/credit_consult"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textBigSize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_saldo_bono"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:background="@drawable/rounded_corner_button_blue"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_big_button">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="end|top"
                        android:src="@drawable/icon_saldo_bono"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_text_space"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/bonus_credit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textBigSize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_saldo_bolsa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:background="@drawable/rounded_corner_button_blue"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_big_button">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="end|top"
                        android:src="@drawable/mb_bag"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_text_space"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/bag_credit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textBigSize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_saldo_sms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:background="@drawable/rounded_corner_button_blue"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_big_button">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="end|top"
                        android:src="@drawable/icon_sms_saldo"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_text_space"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/sms_credit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textBigSize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_saldo_voz"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:background="@drawable/rounded_corner_button_blue"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_big_button">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="end|top"
                        android:src="@drawable/icon_voice_saldo"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_text_space"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/voice_credit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textBigSize" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>