<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_free"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:background="@drawable/rounded_corner_button_green"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_big_button">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="end|top"
                        android:tint="@color/white"
                        android:src="@drawable/icon_free_call" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_text_space"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/free"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textBigSize" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_private"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="40"
                    android:background="@drawable/rounded_corner_button_red"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_big_button">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="end|top"
                        android:tint="@color/white"
                        android:src="@drawable/icon_unknown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_text_space"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/private_call"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textBigSize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_saldo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:background="@drawable/rounded_corner_button_blue"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_big_button">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="end|top"
                        android:tint="@color/white"
                        android:src="@drawable/icon_saldo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_text_space"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/credit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textBigSize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_recarga"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:background="@drawable/rounded_corner_button_blue"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_big_button">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="end|top"
                        android:tint="@color/white"
                        android:src="@drawable/icon_recarga" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_text_space"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/increase"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textBigSize" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_buy_all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:background="@drawable/rounded_corner_button_red"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_big_button">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="end|top"
                        android:tint="@color/white"
                        android:src="@drawable/icon_buy_all" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_text_space"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/buy_all"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textBigSize" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_transfer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="60"
                    android:background="@drawable/rounded_corner_button_red"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_big_button">

                    <ImageView
                        android:layout_width="@dimen/button_icon_size"
                        android:layout_height="@dimen/button_icon_size"
                        android:layout_gravity="end|top"
                        android:tint="@color/white"
                        android:src="@drawable/icon_transfer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/icon_text_space"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/transfer"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textBigSize" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>