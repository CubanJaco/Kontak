<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jaco.contact.PhonesListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:paddingLeft="@dimen/padding_small_button"
            android:paddingRight="@dimen/padding_small_button"
            android:paddingEnd="@dimen/padding_small_button"
            android:paddingStart="@dimen/padding_small_button"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/button_custom_birthday"
                android:layout_width="@dimen/switch_button"
                android:layout_height="@dimen/switch_button"
                android:background="@drawable/circle_button">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:tint="@color/white"
                    android:padding="@dimen/padding_small_button"
                    android:src="@drawable/icon_add"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:paddingLeft="@dimen/padding_small_button"
            android:paddingRight="@dimen/padding_small_button"
            android:paddingEnd="@dimen/padding_small_button"
            android:paddingStart="@dimen/padding_small_button"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/button_show_ignore"
                android:layout_width="@dimen/switch_button"
                android:layout_height="@dimen/switch_button"
                android:background="@drawable/circle_button">

                <ImageView
                    android:id="@+id/show_ignore_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:tint="@color/white"
                    android:padding="@dimen/padding_small_button"
                    android:src="@drawable/icon_visibility_show"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:paddingLeft="@dimen/padding_small_button"
            android:paddingRight="@dimen/padding_small_button"
            android:paddingEnd="@dimen/padding_small_button"
            android:paddingStart="@dimen/padding_small_button"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/button_sync"
                android:layout_width="@dimen/switch_button"
                android:layout_height="@dimen/switch_button"
                android:background="@drawable/circle_button">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:tint="@color/white"
                    android:padding="@dimen/padding_small_button"
                    android:src="@drawable/icon_sync"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        app:layoutManager="LinearLayoutManager" />

</LinearLayout>
