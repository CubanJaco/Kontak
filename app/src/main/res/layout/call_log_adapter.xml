<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/call_day_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/padding_small_button"
        android:paddingBottom="@dimen/padding_small_button"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_weight="100"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/colorAccent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_big_button"
            android:paddingRight="@dimen/padding_big_button"
            android:paddingTop="@dimen/padding_small_button"
            android:paddingBottom="@dimen/padding_small_button"
            android:background="@drawable/circle_layout_accent">

            <TextView
                android:id="@+id/call_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/call_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/buttonBackground"
        android:paddingLeft="@dimen/padding_big_button"
        android:paddingRight="@dimen/padding_big_button"
        android:paddingTop="@dimen/padding_small_button"
        android:paddingBottom="@dimen/padding_small_button"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size">

            <ImageView
                android:id="@+id/contact_image"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size" />

            <ImageView
                android:id="@+id/call_identifier"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|end" />

        </android.support.design.widget.CoordinatorLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/textMediumSize" />

            <TextView
                android:id="@+id/contact_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/textSmallSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/call_hour"
                    android:layout_weight="50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSmallSize" />

                <TextView
                    android:id="@+id/call_duration"
                    android:layout_weight="50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:textSize="@dimen/textSmallSize" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/load_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_more_height"
        android:background="?attr/buttonBackground"
        android:paddingLeft="@dimen/padding_big_button"
        android:paddingRight="@dimen/padding_big_button"
        android:paddingTop="@dimen/padding_small_button"
        android:paddingBottom="@dimen/padding_small_button"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textMediumSize"
            android:text="@string/load_more"/>

    </LinearLayout>

</LinearLayout>